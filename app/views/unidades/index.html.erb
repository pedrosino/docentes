<div class="container">
  <h4>Unidades AcadÃªmicas e Unidades Especiais de Ensino</h4>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Sigla</th>
        <th>Nome</th>
        <th>Diretor(a)</th>
        <th>E-mail</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @unidades.each do |unidade| %>
        <tr>
          <td><%= unidade.sigla %></td>
          <td><%= unidade.nome %></td>
          <td><%= unidade.diretor %></td>
          <td><%= unidade.email %></td>
          <td>
            <%= link_to edit_unidade_path(unidade), class: "btn btn-primary" do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to new_unidade_path, class: "btn btn-success" do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova Unidade
  <% end %>
</div>