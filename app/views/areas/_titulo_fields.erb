<tr class="nested-fields">
  <td class="descricao borda"><%= f.text_area :descricao, required: true, class: "form-control required" %></td>
  <td class="valor borda">
    <%= f.text_field :valor, required: true, class: "form-control required" %>
    pontos por <%= f.select :unidade_medida, Area::UNIDADES.sort, {}, { required: true, class: "required" } %>
  </td>
  <td class="maximo borda">
    <%= f.text_field :maximo, required: true, class: "form-control required" %> pontos
    <p class="texto-maximo"></p>
  </td>
  <td><%= link_to_remove_association button_tag(icon("times", "Remover"), type: "button", class: "btn btn-danger"), f %></td>
<%= f.hidden_field :tipo, value: tipo %>
<%= f.hidden_field :prorrogacao, value: prorrogacao %>
</tr>
