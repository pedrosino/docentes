<tr class="nested-fields">
  <td class="descricao borda"><%= f.text_area :descricao, required: true, class: "form-control" %></td>
  <td class="unidade borda"><%= f.select :unidade_medida, ['ano','semestre','aluno','artigo','trabalho','livro','capítulo','tradução','parecer','disciplina','trabalho','resumo','evento','participação','aprovação','banca','orientação','publicação','patente','registro','projeto','premiação','maquete','obra','relatório','direção'].sort, required: true, class: "form-control" %></td>
  <td class="valor borda">
    <%= f.text_field :valor, require: true, class: "form-control", locale: "br" %>
    <span class="pontos-por"></span>
  </td>
  <td class="maximo borda">
    <%= f.text_field :maximo, require: true, class: "form-control", locale: "br" %>
      pontos
  </td>
  <td><%= link_to_remove_association button_tag(icon("times", "Remover"), type: "button", class: "btn btn-danger"), f %></td>
<%= f.hidden_field :tipo, value: tipo %>
</tr>
