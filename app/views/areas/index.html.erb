<div class="row menu">
  <%= render 'layouts/menu_lateral' %>
  <div class="colunas-menu">
    <h4>Áreas</h4>

    <div class="row menu">
      <div class="col-md-6">
        <%= link_to new_area_path, class: "btn btn-success" do %>
          <%= glyphicon("plus") %> Nova Área
        <% end %>
      </div>
      <div class="col-md-6">
        <%= form_tag areas_path, method: :get, remote: true, class: "form-inline", id: "areas-form" do %>
          <div class="form-group">
            <%= label_tag("Buscar") %>
            <div id="search-field">
              <div class="input-group">
                <span class="input-group-addon">
                  <%= icon('search') %>
                </span>
                <%= text_field_tag "search", params[:search], class: "form-control", placeholder: "Unidade ou área" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @areas != nil %>
      <div class="row menu">
        <div id="lista-areas">
          <%= render 'index_table', areas: @areas %>
        </div>
      </div>
    <% else %>
      Nada!
    <% end %>
  </div>
</div>
