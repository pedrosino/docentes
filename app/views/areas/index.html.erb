<div class="container">
  <h4>Áreas</h4>

  <% if @areas %>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Unidade</th>
          <th>Área</th>
          <th>Subárea</th>
          <th>Tipo</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @areas.each do |area| %>
        <tr>
          <td><%= area.unidade.sigla %></td>
          <td><%= area.nome %></td>
          <td><%= area.subarea %></td>
          <td><%= area.tipo %></td>
          <td>
            <%= link_to edit_area_path(area), class: "btn btn-primary" do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    Nada!
  <% end %>
</div>