<div class="container">
  <h4>Vagas</h4>

  <% if @vagas %>
    <table class="table table-condensed index">
      <thead>
        <tr>
          <th>Unidade</th>
          <th>Nome</th>
          <th>Código</th>
          <th>Tipo</th>
          <th>Data</th>
          <th>Data fim</th>
          <th>Situação</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @vagas.each.sort_by{ |vaga| vaga[:unidade_id] }.each do |vaga| %>
          <tr>
            <td><%= vaga.unidade.sigla %></td>
            <td><%= vaga.nome %></td>
            <td><%= vaga.codigo %></td>
            <td><%= vaga.tipo %></td>
            <td><%=l vaga.data_inicio, format: :default %></td>
            <td>
              <% if vaga.data_fim.present? %>
                <%=l vaga.data_fim, format: :default %>
              <% end %>
            </td>
            <td><%= situacao_vaga(vaga.situacao) %></td>
            <td>
              <%= link_to edit_vaga_path(vaga), class: "btn btn-primary btn-sm" do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <%= link_to new_vaga_path, class: "btn btn-success" do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova vaga
  <% end %>
</div>