<div class="row menu">
  <%= render 'layouts/menu_lateral' %>
  <div class="colunas-menu">
    <div class="row menu">
      <div class="col-md-6">
        <h4>Vagas</h4>
        <%= link_to new_vaga_path, class: "btn btn-success" do %>
          <%= glyphicon("plus") %> Nova vaga
        <% end %>
      </div>
      <div class="col-md-6">
        <%= form_tag vagas_path, method: :get, remote: true, class: "form-inline", id: "vagas-form" do %>
          <div class="form-group">
            <%= label_tag("Buscar") %>
            <div id="search-field">
              <div class="input-group">
                <span class="input-group-addon">
                  <%= icon('search') %>
                </span>
                <%= text_field_tag "search", params[:search], class: "form-control", placeholder: "Digite o nome" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <h4>Vagas abertas</h4>

    <% if @vagas_abertas.length > 0 %>
      <div class="row menu">
        <div id="lista-areas">
          <%= render 'index_table', vagas: @vagas_abertas %>
        </div>
      </div>
    <% end %>

    <br />
    <h4>Vagas ocupadas</h4>

    <% if @vagas_ocupadas.length > 0 %>
      <div class="row menu">
        <div id="lista-areas">
          <%= render 'index_table', vagas: @vagas_ocupadas %>
        </div>
      </div>
    <% end %>
  </div>
</div>
