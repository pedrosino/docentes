<!--div class="container"-->
<div class="row">
  <%= render 'layouts/menu_lateral' %>
  <div class="col-sm-9 col-md-10">
    <h4>Editais</h4>

    <% if @editais != nil %>
      <table class="table table-condensed index">
        <thead>
          <tr>
            <th>Número</th>
            <th>Tipo</th>
            <th>Área(s)</th>
            <th>Publicação</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
        <% @editais.each do |edital| %>
          <tr>
            <td><%= edital.numero %></td>
            <td><%= edital.tipo == 'concurso' ? 'Concurso Público' : 'Processo Seletivo Simplificado' %></td>
            <td>
              <%= edital.areas.map(&:nome).to_sentence if edital.areas %>
            </td>
            <td></td>
            <td>
              <%= link_to edit_edital_path(edital), class: "btn btn-primary" do %>
                <%= glyphicon("pencil") %> Editar
              <% end %>
              <%= link_to icon("file-word-o", "Word"), edital_word_path(edital), class: "btn btn-success" %>
              <%= link_to icon("file-pdf-o", "PDF"), edital_pdf_path(edital), class: "btn btn-warning" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      Nada!
    <% end %>
    <%= link_to new_edital_path, class: "btn btn-success" do %>
      <%= glyphicon("plus") %> Novo Edital
    <% end %>
  </div>
</div>
