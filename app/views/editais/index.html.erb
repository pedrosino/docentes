<div class="row menu">
  <%= render 'layouts/menu_lateral' %>
  <div class="colunas-menu">
    <div class="row menu">
      <div class="col-md-6">
        <h4>Editais</h4>
        <% if current_user.pode_criar_edital? %>
          <%= link_to new_edital_path, class: "btn btn-success" do %>
            <%= glyphicon("plus") %> Novo Edital
          <% end %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= form_tag editais_path, method: :get, remote: true, class: "form-inline", id: "editais-form" do %>
          <div class="form-group">
            <%= label_tag("Buscar") %>
            <div id="search-field">
              <div class="input-group">
                <span class="input-group-addon">
                  <%= icon('search') %>
                </span>
                <%= text_field_tag "search", params[:search], class: "form-control", placeholder: "Ãrea" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <br />

    <% if @editais.length > 0 %>
      <div class="row menu">
        <div id="lista-editais">
          <%= render 'index_table', editais: @editais %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-warning">Nenhum edital encontrado</div>
    <% end %>
  </div>
</div>
